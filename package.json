{
  "name": "minobo",
  "version": "1.0.0",
  "description": "A mini opinionated node boilerplate.",
  "main": "index.js",
  "author": "Nick Taylor <nick@iamdeveloper.com>",
  "license": "MIT",
  "engines": {
    "node": ">=6"
  },
  "keywords": [
    "node",
    "boilerplate"
  ],
  "scripts": {
    "start": "npm run build && node ./dist/app.js",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "prebuild": "npm test",
    "build": "webpack",
    "precommit": "lint-staged && npm test",
    "pretty": "prettier --write"
  },
  "lint-staged": {
    "*.js": [
      "npm run pretty",
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "npm run pretty",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "json",
      "js"
    ],
    "testRegex": "/__tests__/.*\\.spec\\.js$",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.2",
    "babel-preset-env": "1.6.0",
    "eslint": "4.5.0",
    "eslint-config-prettier": "2.3.0",
    "husky": "0.14.3",
    "jest": "20.0.4",
    "lint-staged": "4.0.4",
    "prettier": "1.6.1",
    "rimraf": "2.6.1",
    "webpack": "3.5.5"
  }
}
