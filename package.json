{
  "name": "generator-minobo",
  "version": "0.0.3",
  "description": "A mini opinionated node boilerplate.",
  "homepage": "https://github.com/nickytonline/generator-minobo",
  "author": {
    "name": "Nick Taylor",
    "email": "nick@iamdeveloper.com",
    "url": "https://www.iamdeveloper.com"
  },
  "files": ["generators"],
  "main": "generators/index.js",
  "engines": {
    "node": ">=7.6"
  },
  "keywords": ["boilerplate", "node", "yeoman-generator"],
  "devDependencies": {
    "yeoman-test": "^1.7.0",
    "yeoman-assert": "^3.1.0",
    "nsp": "^3.2.1",
    "eslint": "^4.1.0",
    "prettier": "^1.7.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.1",
    "eslint-config-prettier": "^2.4.0",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-config-xo": "^0.20.1",
    "jest": "^22.0.6"
  },
  "dependencies": {
    "yeoman-generator": "^2.0.1",
    "chalk": "^2.1.0",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "prepublish": "nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "eslintConfig": {
    "extends": ["xo", "prettier"],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": ["prettier"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nickytonline/generator-minobo.git"
  },
  "license": "MIT"
}
